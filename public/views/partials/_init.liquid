{% parse_json "config" %}
  {
    "default_wrapper_class": "{{ default_wrapper_class | default: 'form-group' }}",
    "default_input_class": "{{ default_input_class | default: 'form-control' }}"
  }
{% endparse_json %}
{% export config, namespace: "utils" %}

{%- assign _utils = "modules/utils/" -%}
{%- assign _utils_tags = _utils | append: "tags/" -%}
{%- assign _utils_fields = _utils | append: "fields/" -%}

{%- assign input = _utils | append: 'input' -%}
{%- assign text_field = _utils_fields | append: 'text' -%}
{%- assign email_field = _utils_fields | append: 'email' -%}
{%- assign date_field = _utils_fields | append: 'date' -%}
{%- assign checkbox_field = _utils_fields | append: 'checkbox' -%}
{%- assign hidden_field = _utils_fields | append: 'hidden' -%}
{%- assign label_tag = _utils_tags | append: 'label_tag' -%}
{%- assign submit_tag = _utils_tags | append: 'submit' -%}
{%- assign flash_messages = _utils | append: 'flash_messages' -%}
{%- assign form_errors = _utils | append: 'form/error_notifications' -%}
{%- assign pagination = _utils | append: 'helpers/pagination' -%}


{
  "pagination": "{{ pagination }}",
  "flash_messages": "{{ flash_messages }}",
  "form_errors": "{{ form_errors }}",
  "input": "{{ input }}",
  "text_field": "{{ text_field }}",
  "email_field": "{{ email_field }}",
  "date_field": "{{ date_field }}",
  "checkbox_field": "{{ checkbox_field }}",
  "hidden_field": "{{ hidden_field }}",
  "label_tag": "{{ label_tag }}",
  "submit_tag": "{{ submit_tag }}"
}
